<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wavetop"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:text="Trace Together"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_admin"
            android:layout_width="125dp"
            android:layout_height="54dp"
            android:layout_marginTop="200dp"
            android:text="ADMIN"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_moh"
            android:layout_width="122dp"
            android:layout_height="54dp"
            android:text="MOH"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_user"
            android:layout_width="108dp"
            android:layout_height="56dp"
            android:layout_marginTop="189dp"
            android:layout_marginBottom="56dp"
            android:text="USER"
            app:layout_constraintBottom_toTopOf="@+id/btn_moh"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.272" />

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="113dp"
            android:layout_height="99dp"
            android:layout_marginStart="143dp"
            android:layout_marginTop="54dp"
            android:layout_marginEnd="155dp"
            android:layout_marginBottom="34dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_user"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ttlogo2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>